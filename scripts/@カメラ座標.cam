@カメラ座標
--track0:X,-1000,1000,0,0.1
--track1:Y,-1000,1000,0,0.1
--track2:Z,-1000,1000,0,0.1
--track3:傾き,-720,720,0,0.1

--------------------------------------------------------------
-- 変数
--------------------------------------------------------------
cam = obj.getoption("camera_param")
--座標
cx = cam.x
cy = cam.y
cz = cam.z
rz = cam.rz

--------------------------------------------------------------
-- カメラ座標
--------------------------------------------------------------

cam.x = cx + obj.track0
cam.y = cy + obj.track1
cam.z = cz + obj.track2
cam.rz = rz + obj.track3

obj.setoption("camera_param", cam)